<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane prefHeight="479.0" prefWidth="700.0" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.finalproj5003.libarysystem.controller.BookListController">
   <children>
      <VBox layoutX="-2.0" layoutY="-1.0" prefHeight="350.0" prefWidth="700.0">
         <children>
            <HBox prefHeight="100.0" prefWidth="200.0" spacing="10.0">
               <children>
                  <TextField fx:id="tfKeyword" promptText="search keyword" />
                  <Button mnemonicParsing="false" onAction="#onSearch" prefHeight="26.0" prefWidth="60.0" text="Search" />
                  <Button fx:id="btnRent" mnemonicParsing="false" onAction="#onRent" prefHeight="26.0" prefWidth="60.0" text="Rent" />
               </children>
               <padding>
                  <Insets left="10.0" top="10.0" />
               </padding>
            </HBox>
            <TableView fx:id="bookTable" maxHeight="-Infinity" maxWidth="-Infinity" prefHeight="324.0" prefWidth="593.0">
               <columnResizePolicy>
                  <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
               </columnResizePolicy>
               <columns>
                  <TableColumn fx:id="idCol" prefWidth="35.0" resizable="false" text="id" />
                  <TableColumn fx:id="bookNameCol" prefWidth="124.0" resizable="false" text="BOOK NAME" />
                  <TableColumn fx:id="descriptionCol" prefWidth="234.0" resizable="false" text="Description" />
                  <TableColumn fx:id="authorCol" prefWidth="100.0" resizable="false" text="Author" />
                  <TableColumn fx:id="editionCol" prefWidth="50.0" resizable="false" text="Edition" />
                  <TableColumn fx:id="stockCol" prefWidth="50.0" resizable="false" text="Stock" />
               </columns>
            </TableView>
         </children>
      </VBox>
   </children>
</AnchorPane>
